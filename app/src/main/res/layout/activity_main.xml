<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/header_white"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            />


    <TextView
        android:id="@+id/txt_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/study"
        style="@style/txt_title"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.3"
        android:weightSum="1"
        android:gravity="center"
        >
        <Button
            android:id="@+id/learning_word"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/learning_word"
            style="@style/btn_study"
            android:background="@drawable/button_study"
            tools:ignore="NestedWeights" />
        <Button
            android:id="@+id/quiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="@string/quiz"
            style="@style/btn_study"
            android:background="@drawable/button_study"

            />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_addWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/add_word"
        style="@style/txt_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        >



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="top"
        tools:ignore="NestedWeights">

        <Button
            android:id="@+id/typing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@drawable/button_study"
            android:text="@string/typing"
            style="@style/btn_add_word"
            />

        <Button
            android:id="@+id/image_detection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="@string/image_detection"
            android:background="@drawable/button_study"
            style="@style/btn_add_word"
            />
        <Button
            android:id="@+id/STT"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="@string/STT"
            android:background="@drawable/button_study"
            style="@style/btn_add_word"
            />

    </LinearLayout>

    </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>